{
    "name": "@unite-2/dom-ts",
    "description": "DOM Utility",
    "version": "1.0.0alpha",
    "private": false,
    "type": "module",
    "index": "./dist/dom.js",
    "scripts": {
        "test": "vite --host 0.0.0.0",
        "dev": "vite --host 0.0.0.0",
        "worker": "vite build",
        "watch": "vite build --watch",
        "build": "vite build --config vite.config.js",
        "build-wp": "webpack build --mode=production",
        "preview": "vite preview",
        "build-docs": "typedoc src/index.ts --out ./docs --tsconfig ./tsconfig.json --excludeExternals --excludePrivate --excludeProtected --skipErrorChecking"
    },
    "browserslist": [
        "last 1 chrome version",
        "last 1 edge version"
    ],
    "devDependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@rollup/rollup-linux-x64-gnu": "^4.46.2",
        "@types/node": "^22.8.1",
        "autoprefixer": "^10.4.16",
        "esbuild": "^0.25.0",
        "eslint": "^9.13.0",
        "eslint-config-prettier": "^9.1.0",
        "sass": "^1.90.0",
        "terser": "^5.34.1",
        "typedoc": "^0.28.5",
        "typescript": "^5.6.3",
        "vite": ">=7.1.5",
        "vite-plugin-compression2": "^2.2.0",
        "vite-plugin-dynamic-import": "^1.6.0",
        "vite-plugin-external": "^4.3.1",
        "vite-plugin-optimizer": "^1.4.3"
    }
